<Window x:Class="ELTE.ExamGenerator.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tétel generátor" Height="272" Width="226" ResizeMode="NoResize">
    <Grid>
        <Label FontSize="120" FontWeight="Bold" BorderBrush="Black" BorderThickness="1" Margin="10,0,10,83">
            <TextBlock Text="{Binding QuestionNumber}" FontSize="116" FontWeight="Bold" TextAlignment="Center" Height="150" Width="191" />
        </Label>
        <Button Content="{Binding Text}" Command="{Binding StartStopCommand}" FontSize="24" Margin="10,0,10,28" Padding="0" Height="50" VerticalAlignment="Bottom" />
        <Button Content="Beállítások" Command="{Binding OpenSettingsCommand}" Height="23" Width="75" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
    </Grid>
</Window>
